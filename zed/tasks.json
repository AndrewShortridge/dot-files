[
  {
    "label": "Fortran: gfortran syntax (all in ./code)",
    "command": "bash",
    "args": [
      "-lc",
      "cd \"$ZED_WORKTREE_ROOT\" && find ./code -type f \\( -name '*.f90' -o -name '*.F90' -o -name '*.f' -o -name '*.F' -o -name '*.for' -o -name '*.FOR' \\) -print0 | xargs -0 gfortran -Wall -Wextra -fsyntax-only -fdiagnostics-plain-output -fdiagnostics-color=always",
    ],
    "cwd": "$ZED_WORKTREE_ROOT",
    "reveal": "always",
    "hide": "never",
  },
]
